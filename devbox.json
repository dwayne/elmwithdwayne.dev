{
  "packages": [
    "github:dwayne/deploy/e6b015c6ce926275db378e6370429f60e649fc9d",
    "gnumake@latest",
    "nodejs@22",
    "nushell@latest",
    "pnpm@latest"
  ],
  "env": {
    "BUILD": "$DEVBOX_PROJECT_ROOT/dist",
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$PATH",
    "PROJECT_ROOT": "$DEVBOX_PROJECT_ROOT"
  },
  "shell": {
    "init_hook": [
      "if [ ! -d $PROJECT_ROOT/node_modules ]; then pnpm install --silent; fi",
      "alias d='website dev'",
      "alias b='website build'",
      "alias p='website preview'"
    ]
  }
}
